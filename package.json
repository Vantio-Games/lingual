{
    "name": "lingual-lang",
    "version": "1.0.0",
    "description": "A CLI tool for transpiling a custom language to other programming languages",
    "type": "module",
    "main": "dist/index.js",
    "bin": {
        "lingual": "dist/cli.js"
    },
    "scripts": {
        "build": "tsc",
        "dev": "tsc --watch",
        "start": "node dist/cli.js",
        "test": "jest",
        "lint": "eslint src/**/*.ts",
        "format": "prettier --write src/**/*.ts"
    },
    "keywords": [
        "cli",
        "transpiler",
        "compiler",
        "language",
        "chevrotain",
        "typescript"
    ],
    "author": "William McGonagle <wpm45@georgetown.edu>",
    "license": "MIT",
    "dependencies": {
        "chalk": "^5.3.0",
        "chevrotain": "^10.4.1",
        "commander": "^11.1.0",
        "glob": "^10.4.5",
        "node-fetch": "^3.3.2"
    },
    "devDependencies": {
        "@types/glob": "^8.1.0",
        "@types/node": "^20.10.0",
        "@typescript-eslint/eslint-plugin": "^6.13.0",
        "@typescript-eslint/parser": "^6.13.0",
        "eslint": "^8.54.0",
        "jest": "^29.7.0",
        "prettier": "^3.1.0",
        "typescript": "^5.3.0"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}